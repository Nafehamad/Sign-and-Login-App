<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455a64"
    android:orientation="vertical"
    tools:context=".SignupActivity">





    <EditText
        android:id="@+id/first"
        android:layout_width="350dp"
        android:maxLines="1"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="60dp"
        android:textColorHint="#ffffff"
        android:layout_marginBottom="25dp"
        android:hint="Enter Your First Name"
        android:inputType="text"

        />
    <EditText
        android:id="@+id/last"
        android:maxLines="1"
        android:layout_width="350dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="60dp"
        android:textColorHint="#ffffff"
        android:layout_marginBottom="25dp"
        android:hint="Enter Your Last Name"
        android:inputType="text"

        />
    <EditText
        android:id="@+id/emailSign"
        android:layout_width="350dp"
        android:maxLines="1"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="60dp"
        android:textColorHint="#ffffff"
        android:layout_marginBottom="10dp"
        android:inputType="textEmailAddress"
        android:hint="Email ex: xxx@xxx.com"


        />

    <TextView
        android:id="@+id/val"
        android:layout_width="350dp"
        android:maxLines="1"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:height="25dp"
        android:layout_marginBottom="8dp"
        android:inputType="text"
        android:textColor="#fff"

        />


    <EditText
        android:id="@+id/passwordSign"
        android:layout_width="350dp"
        android:maxLines="1"
        android:textColorHint="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_height="wrap_content"
        android:height="60dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/sign"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="80dp"
        android:background="#7BB062"
        android:text="  Sign Up"
        android:enabled="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#ffffff"
            android:layout_marginLeft="85dp"
            android:hint="have an account ?"
            android:textSize="20dp"


            />
        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#455a64"
            android:text="Login"
            android:textColor="#7BB062"
            android:textSize="20dp"
            />

    </LinearLayout>




</LinearLayout>